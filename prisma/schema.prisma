generator client {
  // provider = "prisma-client"
  // output   = "../app/generated/prisma"
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id Int @id @default(autoincrement())
  name String
  email String @unique
  role Role @default(USER)
  password String
  token String?
  createdAt DateTime @default(now())
}

model Author {
  id Int @id @default(autoincrement())
  name String


  book Book[]
}

model Book{
  
  id Int @id @default(autoincrement())
  title String
  publishedYear Int
  publisher String
  createdAt DateTime @default(now())

  authorId Int?

  author Author? @relation(fields: [authorId], references: [id])

}

model Log{
  id Int @id @default(autoincrement())
  method String
  pathname String
  UserId String?
  role String?
  createdAt DateTime @default(now())
}
